/*Random class
 * 
 */
 
import java.util.Random; 
public class Randoms {
	Random oRandNbr = new Random();
	public int [] RandomDice(){
		
		int iDie1 = oRandNbr.nextInt(6)+1;
		int iDie2 = oRandNbr.nextInt(6)+1;
		int iMove = iDie1 + iDie2;
		System.out.println(iDie1+" and "+ iDie2+ " the total move is " + iMove);
		if (iDie1 == 1 && iDie2 == 1){
			System.out.println("Snake Eyes");
		}
		//roll again
		int [] aOut = {iDie1,iDie2,iMove}; // array[0..1] ==  each die and array[2] == move amount
		return aOut;
	}
	
	public int RandomChestint(){
		int iNumbr = oRandNbr.nextInt(15);
		return iNumbr;
	}
	
	public int RandomChanceint(){
		int iNumbr = oRandNbr.nextInt(/*number of cards in chance*/);
		return iNumbr;
	}
		
	

}
