/*Random Dice class
 * 
 */

import java.util.Random;
//CLASS NAME NEEDS TO MATCH FILE NAME
public class RandomDice {
	public void Random(String sAction){
		Random oRandNbr = new Random();
		String sInput = sAction;
		if(sInput == "Roll Dice"){
		int iDie1 = oRandNbr.nextInt(6)+1;
		int iDie2 = oRandNbr.nextInt(6)+1;
		int iMove = iDie1 + iDie2;
		if(iDie1 == iDie2){
			System.out.println(iDie1+"and "+ iDie2+ " the total move is " + iMove);
			//roll again
			return;
			if(iDie1 == 1 && iDie2 == 1){
				System.out.println("Snake eyes");
			}
		//MAKE INDENTATIONS LINE UP RIGHT
		}else{
			System.out.println(iDie1+"and "+ iDie2+ " the total move is " + iMove);
		}
		}else{
			/*Shuffle 
			 * ask for community chest or chance
			 * len of deck
			 * shuffle 
			 * return list of randomly organized numbers
			 */
		}
		//return stuff to main and/or other programs
	}

}

